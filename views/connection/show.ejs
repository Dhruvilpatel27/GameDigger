<%- include('../partials/header.ejs') %>
<div class="container">
    <div class="container-center">
        <form style="width: 100%;">
            
            <div class="event-detail">
                <h3 class="inline-block"><%= connection.name %></h3>
                <% if(user == connection.hostname._id) { %>
                <div class="float-right">
                    <button class="update-btn" formmethod="GET" formaction="/connections/<%= connection.id %>/edit">Edit</button>
                    <button class="delete-btn" formmethod="POST" formaction="/connections/<%= connection.id %>?_method=DELETE">Delete</button>
                </div>
                <% } %>
            </div>
        </form>
        <div class="event-wrapper">
            <div class="event-image-class"><img class="event-image-margin event-image" src="<%= connection.image %>" alt="Logo"></div>
            <div class="event-detail-wrapper">
                 <h4>Hosted by <%= connection.hostname.firstName +' '+ connection.hostname.lastName  %></h4>
                 <p><%= connection.date %></p>
                 <p><%= connection.startTime %> - <%= connection.endTime %></p>
                 <p><%= connection.location %></p>
            </div>
            <div class="rsvp-wrapper">
                <h4><%= rsvpCount %> people are Joining</h4>
                <% if(user != connection.hostname._id) { %>
                <p>RSVP to attend!</p>
                <form style="width: 100%;">
                    <button class="button submit-btn" name="status" type="submit" formmethod="POST" value="Yes" formaction="/connections/<%= connection._id %>/rsvp">Yes</button>
                    <button class="button update-btn" name="status" type="submit" formmethod="POST" value="Maybe" formaction="/connections/<%= connection._id %>/rsvp">Maybe</button>
                    <button class="button delete-btn" name="status" type="submit" formmethod="POST" value="No" formaction="/connections/<%= connection._id %>/rsvp">No</button>
                </form>
                <% } %>
            </div>
          </div>
          <div class="detail-wrapper">
            <h3>Details</h3>
            <p><%= connection.details %></p> 
          </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>