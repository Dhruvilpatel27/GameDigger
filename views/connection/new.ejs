<%- include('../partials/header.ejs') %>
<div class="container">
    <div class="container-center">
        <form action = '/connections' method = 'POST' class="mt-20">
            <label for="topic">Title</label>
            <input type="text" id="topic" name="topic" placeholder="Enter topic.." required minlength="3">

            <label for="name">Producer</label>
            <input type="text" id="name" name="name" placeholder="Enter title.." required minlength="3">

            <label for="details">Details</label>
            <textarea id="details" name="details" placeholder="Enter detail.." required minlength="3"></textarea>
        
            <label for="date">Date</label>
            <input type="date" id="date" name="date" required>

            <label for="startTime">Start Time</label>
            <input type="time" id="startTime" name="startTime" required>

            <label for="endTime">End Time</label>
            <input type="time" id="endTime" name="endTime" required>

            <label for="image">Image URL</label>
            <input type="url" id="image" name="image" placeholder="Enter image url.." required>
        
            <button class="btn submit-btn">Create Event</button>
        </form>
    </div>
</div>
<%- include('../partials/footer.ejs') %>